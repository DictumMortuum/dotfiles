[colors]
background = ${xrdb:background}
lightbg = ${xrdb:color0}
selection = ${xrdb:color1}
foreground = ${xrdb:foreground}

[settings]
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/wired]
type = internal/network
label-connected = %{T2}%{T-} %local_ip%
interface = ${xrdb:wired}
interval = 3.0

[module/wireless]
type = internal/network
label-connected = %{T2}%{T-} %local_ip%
interface = ${xrdb:wireless}
interval = 3.0

[module/datetime]
type = internal/date
interval = 1.0
date = "%Y-%m-%d%"
time = "%H:%M:%S"
label = %{T2}%{T-} %date% %time%

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused = %icon%
label-focused-padding = 1
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.selection}
label-unfocused = %icon%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 1
label-visible = %icon%
label-visible-padding = 1
label-visible-background = ${colors.background}
label-urgent = %icon%
label-urgent-padding = 1
index-sort = true
ws-icon-0 = 0;0
ws-icon-1 = 1;1
ws-icon-2 = 2;2
ws-icon-3 = 3;3
ws-icon-4 = 4;4
ws-icon-5 = 5;
ws-icon-6 = 6;
ws-icon-7 = 7;7
ws-icon-8 = 8;8
ws-icon-9 = 9;9

[module/keyboard]
type = internal/xkeyboard
format = <label-layout>
blacklist-0 = num lock
blacklist-1 = scroll lock
label-layout = %layout%
padding = 1

[bar/one]
modules-left = i3
modules-center = keyboard
modules-right = wired wireless datetime
module-margin-right = 2
monitor = ${xrdb:bar0}
monitor-strict = true
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Hack:size=10:weight=bold;2
font-1 = FontAwesome:size=10;2
wm-restack = i3
padding-right = 1
tray-detached = false
tray-position = center

[bar/two]
inherit = bar/one
monitor = ${xrdb:bar1}
tray-position =

[bar/three]
