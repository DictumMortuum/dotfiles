[colors]
background = ${xrdb:background:#ff0000}
background2 = ${xrdb:lighterbg:#ff0000}
selection = ${xrdb:selection:#ff0000}
foreground = ${xrdb:foreground:#ff0000}
separator = ${xrdb:separator:#ff0000}
lightfg = ${xrdb:color7:#ff0000}
wallpaper = ${xrdb:wallpaper:#ff0000}

[settings]
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/homewired]
type = internal/network
interface = enp1s0
label-connected = %local_ip%
label-connected-padding = 1
format-connected = <label-connected>

[module/workwired]
inherit = module/homewired
interface = enxa44cc8daf8d2

[module/datetime]
type = internal/date
interval = 1.0
date = "%Y-%m-%d%"
time = "%H:%M:%S"
label = "%date% - %time%"

[module/cpu]
type = internal/cpu
format = <ramp-coreload>
