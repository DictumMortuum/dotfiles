label-visible = %index%
label-visible-padding = 1
label-visible-background = ${colors.background2}
label-urgent = %index%
label-urgent-padding = 1
index-sort = true

[module/battery]
type = internal/battery
full-at = 90
battery = BAT0
adapter = AC
poll-interval = 5
