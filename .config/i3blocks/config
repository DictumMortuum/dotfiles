align=center
separator_block_width=15
markup=none

[keyboard]
command=~/.local/bin/xkb-switch -W
interval=persist

[battery]
command=~/.dotfiles/bin/battery
markup=pango
instance=BAT0
interval=30

[wired]
label=
command=~/.dotfiles/bin/iface en
interval=once

[wireless]
label=
command=~/.dotfiles/bin/iface wlp
interval=once

[time]
command=date "+%Y-%m-%d %H:%M:%S"
interval=1

[hostname]
command=hostname
interval=once

