align=center
separator_block_width=15
markup=none
command=~/.dotfiles/blocks/$BLOCK_NAME

[keyboard]
interval=persist

[battery]
interval=30

[interface]
interval=once

[wireless]
label=W
command=~/.dotfiles/blocks/interface wlp
interval=once

[time]
command=date "+%Y-%m-%d %H:%M:%S"
interval=1

[temperature]
command=curl https://wttr.in\?format=3
interval=30

[host]
interval=once
