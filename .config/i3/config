set $mod Mod4

set_from_resource $bg  i3wm.background
set_from_resource $fg  i3wm.color7
set_from_resource $sel i3wm.color1
set_from_resource $lbg i3wm.color0

hide_edge_borders   both
focus_follows_mouse no
gaps inner          10
gaps outer          0
smart_gaps          true
floating_modifier   $mod

bindsym $mod+a               exec nautilus -w
bindsym $mod+c               exec CM_LAUNCHER=rofi clipmenu -p "clipboard"
bindsym $mod+d               exec rofi -show drun -show-icons
bindsym $mod+p               exec --no-startup-id passmenu --type
bindsym $mod+Shift+Return    exec --no-startup-id st -e zsh
bindsym $mod+Return          exec --no-startup-id st -e tmux
bindsym $mod+m               exec --no-startup-id i3-utils layout change
bindsym $mod+Shift+q         kill
bindsym $mod+Shift+c         reload
bindsym $mod+Shift+r         restart
bindsym $mod+Ctrl+space      floating toggle
bindsym $mod+Ctrl+h          split h
bindsym $mod+Ctrl+v          split v
bindsym $mod+f               fullscreen toggle
bindsym $mod+Shift+f         fullscreen toggle global
bindsym $mod+h               focus left
bindsym $mod+j               exec --no-startup-id i3-utils focus prev
bindsym $mod+k               exec --no-startup-id i3-utils focus next
bindsym $mod+l               focus right
bindsym $mod+Shift+h         move left
bindsym $mod+Shift+j         exec --no-startup-id i3-utils move prev
bindsym $mod+Shift+k         exec --no-startup-id i3-utils move next
bindsym $mod+Shift+l         move right
bindsym $mod+w               exec rofi -show window
bindsym --release $mod+Print exec --no-startup-id scrot -s -e 'mv $f ~/Pictures/'

set $mode_system System [R]eboot, [S]hutdown, [E]xit, [l]ock
bindsym $mod+BackSpace mode "$mode_system"
mode "$mode_system" {
  bindsym Shift+e        exec --no-startup-id i3-msg exit, mode "default"
  bindsym Shift+r        exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s        exec --no-startup-id systemctl poweroff, mode "default"
  bindsym l              exec --no-startup-id $HOME/.local/bin/dotctl.sh i3-lock, mode "default"
  bindsym Return         mode "default"
  bindsym Escape         mode "default"
  bindsym $mod+BackSpace mode "default"
}

set $mode_work [j]ira, [S]ervice, [s]sh, [e]nvironments, [h]osts, [g]rafana, [c]ustomer, [t]erminals
bindsym $mod+o mode "$mode_work"
mode "$mode_work" {
  bindsym j       exec $HOME/.local/bin/ob jira, mode "default"
  bindsym s       exec $HOME/.local/bin/ob ssh, mode "default"
  bindsym Shift+s exec $HOME/.local/bin/ob service exec, mode "default"
  bindsym e       exec $HOME/.local/bin/ob env, mode "default"
  bindsym h       exec $HOME/.local/bin/ob host, mode "default"
  bindsym g       exec $HOME/.local/bin/ob grafana, mode "default"
  bindsym t       exec $HOME/.local/bin/ob ssh terminal, mode "default"
  bindsym Return  mode "default"
  bindsym Escape  mode "default"
}

exec_always --no-startup-id $(i3-utils layout detect)
exec_always --no-startup-id hsetroot -solid "$lbg"
exec_always --no-startup-id start-pulseaudio-x11
exec_always --no-startup-id compton
exec_always --no-startup-id dunst -lb "$bg" -lf "$fg" -nb "$bg" -nf "$fg" -cb "$bg" -cfr "$sel" -follow keyboard -history_key ctrl+shift+grave
exec_always --no-startup-id conky -c ~/.config/conky/config -m $(i3-utils layout conky)
exec_always --no-startup-id setxkbmap -model pc105 -layout "us,gr" -option 'grp:alt_shift_toggle,compose:caps'

bar {
  status_command i3blocks
  position top
  tray_output none
  height 28
  font pango:monospace 9
  strip_workspace_numbers yes
  colors {
    background         $bg
    separator          $fg
    focused_workspace  $sel $sel $bg
    inactive_workspace $bg  $bg  $fg
    active_workspace   $bg  $bg  $fg
    urgent_workspace   $bg  $bg  $sel
    binding_mode       $bg  $bg  $fg
  }
}

for_window [class="^.*"] border pixel 0
