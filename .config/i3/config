set $mod Mod4
set $ws0 "0:~"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $wsA "10:A"
set $ctl $HOME/.local/bin/dotctl.sh

set_from_resource $background i3wm.background
set_from_resource $secondary  i3wm.secondary
set_from_resource $text       i3wm.color7
set_from_resource $selection  i3wm.color1
set_from_resource $lightbg    i3wm.color0

hide_edge_borders   both
focus_follows_mouse no
gaps inner          10
gaps outer          0
smart_gaps          true
floating_modifier   $mod

workspace $ws0 output primary
workspace $ws1 output primary
workspace $ws2 output primary
workspace $ws3 output primary
workspace $ws4 output primary
workspace $ws5 output $secondary primary
workspace $ws6 output $secondary primary
workspace $ws7 output $secondary primary
workspace $ws8 output $secondary primary
workspace $ws9 output $secondary primary

bindsym $mod+a            exec thunar
bindsym $mod+c            exec rofi -modi 'clipboard:greenclip print' -show clipboard -run-command '{cmd}'
bindsym $mod+d            exec rofi -show drun
bindsym $mod+p            exec passmenu --type
bindsym $mod+Shift+Return exec st -e zsh
bindsym $mod+Return       exec st -e tmux
bindsym $mod+m            exec --no-startup-id $ctl layout

# i3 basics

bindsym $mod+Shift+q     kill
bindsym $mod+Shift+c     reload
bindsym $mod+Shift+r     restart
bindsym $mod+Ctrl+space  floating toggle
bindsym $mod+Ctrl+h      split h
bindsym $mod+Ctrl+v      split v
bindsym $mod+f           fullscreen toggle

# vim-like movement

bindsym $mod+h           focus left
bindsym $mod+j           focus down
bindsym $mod+k           focus up
bindsym $mod+l           focus right
bindsym $mod+Shift+h     move left
bindsym $mod+Shift+j     move down
bindsym $mod+Shift+k     move up
bindsym $mod+Shift+l     move right

# i3 workspaces

bindsym $mod+grave       workspace $ws0
bindsym $mod+1           workspace $ws1
bindsym $mod+2           workspace $ws2
bindsym $mod+3           workspace $ws3
bindsym $mod+4           workspace $ws4
bindsym $mod+5           workspace $ws5
bindsym $mod+6           workspace $ws6
bindsym $mod+7           workspace $ws7
bindsym $mod+8           workspace $ws8
bindsym $mod+9           workspace $ws9
bindsym $mod+0           workspace $wsA
bindsym $mod+Shift+grave move container to workspace $ws0
bindsym $mod+Shift+1     move container to workspace $ws1
bindsym $mod+Shift+2     move container to workspace $ws2
bindsym $mod+Shift+3     move container to workspace $ws3
bindsym $mod+Shift+4     move container to workspace $ws4
bindsym $mod+Shift+5     move container to workspace $ws5
bindsym $mod+Shift+6     move container to workspace $ws6
bindsym $mod+Shift+7     move container to workspace $ws7
bindsym $mod+Shift+8     move container to workspace $ws8
bindsym $mod+Shift+9     move container to workspace $ws9
bindsym $mod+Shift+0     move container to workspace $wsA

bindsym --release $mod+Print   exec scrot -s

set $mode_system System [R]eboot, [S]hutdown, [E]xit, [l]ock
bindsym $mod+BackSpace mode "$mode_system"
mode "$mode_system" {
  bindsym Shift+e        exec --no-startup-id $ctl i3-exit, mode "default"
  bindsym Shift+r        exec --no-startup-id $ctl i3-reboot, mode "default"
  bindsym Shift+s        exec --no-startup-id $ctl i3-poweroff, mode "default"
  bindsym l              exec --no-startup-id $ctl i3-lock, mode "default"
  bindsym Return         mode "default"
  bindsym Escape         mode "default"
  bindsym $mod+BackSpace mode "default"
}

set $mode_notes [a]dd, [d]elete current note, [s]hift current note
bindsym $mod+n mode "$mode_notes"
mode "$mode_notes" {
  bindsym a      exec $ctl todo-add, mode "default"
  bindsym d      exec $ctl todo-del
  bindsym s      exec $ctl todo-shift
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

set $mode_work [j]ira, [S]ervice, [s]sh, [e]nvironments, [h]osts, [g]rafana, [c]ustomer, [t]erminals
bindsym $mod+o mode "$mode_work"
mode "$mode_work" {
  bindsym j       exec $HOME/.local/bin/ob jira, mode "default"
  bindsym s       exec $HOME/.local/bin/ob ssh, mode "default"
  bindsym Shift+s exec $HOME/.local/bin/ob service exec, mode "default"
  bindsym e       exec $HOME/.local/bin/ob env, mode "default"
  bindsym h       exec $HOME/.local/bin/ob host, mode "default"
  bindsym g       exec $HOME/.local/bin/ob grafana, mode "default"
  bindsym t       exec $HOME/.local/bin/ob ssh terminal, mode "default"
  bindsym Return  mode "default"
  bindsym Escape  mode "default"
}

exec_always --no-startup-id hsetroot -solid "$lightbg"
exec_always --no-startup-id start-pulseaudio-x11
exec_always --no-startup-id compton
exec_always --no-startup-id dunst
exec_always --no-startup-id conky -c ~/.config/conky/config
exec_always --no-startup-id setxkbmap -model pc105 -layout "us,gr" -option 'grp:alt_shift_toggle,compose:caps'

bar {
  status_command i3blocks
  position top
  tray_output none
  height 28
  font pango:monospace 9
  strip_workspace_numbers yes
  colors {
    background         $background
    separator          $text
    focused_workspace  $selection   $selection   $background
    inactive_workspace $background  $background  $text
    active_workspace   $background  $background  $text
    urgent_workspace   $background  $background  $selection
    binding_mode       $background  $background  $text
  }
}

for_window [class="^.*"] border pixel 0
