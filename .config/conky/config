conky.text = [[
${font monospace:size=25}${time %A, %d %B %Y, %T}${font}
${voffset 2}${hr 2}${voffset 2}
kernel: $alignr $kernel
machine: $alignr $machine
uptime: $alignr $uptime
CPU: $alignr ${cpu cpu0}%
RAM: $alignr ${color1}$mem${color}/$memmax
swap: $alignr ${color1}$swap${color}/$swapmax
battery: $alignr ${battery BAT0}${battery BAT1}
file system: $alignr ${fs_used_perc}%
temperature: $alignr ${hwmon temp 1}Â°C
IP: $alignr ${execi 300 dig -4 +short myip.opendns.com @resolver1.opendns.com}
download speed: $alignr ${downspeed wlo1}
upload speed: $alignr ${upspeed wlo1}
${voffset 2}${hr 2}${voffset 2}
New York: $alignr ${tztime America/New_York %Y-%m-%d %H %z %Z}
London: $alignr ${tztime Europe/London %Y-%m-%d %H %z %Z}
Athens: $alignr ${tztime Europe/Athens %Y-%m-%d %H %z %Z}
]];
