[colors]
background = ${xrdb:background}
lightbg = ${xrdb:color0}
selection = ${xrdb:color1}
foreground = ${xrdb:foreground}

[settings]
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/wired]
type = internal/network
label-connected = %local_ip%
interface = ${xrdb:wired}
interval = 3.0

[module/wireless]
type = internal/network
label-connected = %local_ip%
interface = ${xrdb:wireless}
interval = 3.0

[module/datetime]
type = internal/date
interval = 1.0
date = "%Y-%m-%d%"
time = "%H:%M:%S"
label = "%date% %time%"

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused = %index%
label-focused-padding = 1
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.selection}
label-unfocused = %index%
label-unfocused-background = ${colors.lightbg}
label-unfocused-padding = 1
label-visible = %index%
label-visible-padding = 1
label-visible-background = ${colors.lightbg}
label-urgent = %index%
label-urgent-padding = 1
index-sort = true

[module/keyboard]
type = internal/xkeyboard
format = <label-layout>
blacklist-0 = num lock
blacklist-1 = scroll lock
label-layout = %layout%
padding = 1

[module/battery]
type = internal/battery

[bar/one]
modules-left = i3
modules-center = keyboard
modules-right = wired wireless datetime
module-margin-right = 2
monitor = ${xrdb:bar0}
monitor-strict = true
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Hack:size=10:weight=bold;2
wm-restack = i3
padding-right = 1

[bar/two]
inherit = bar/one
monitor = ${xrdb:bar1}
tray-detached = false
tray-position = center

[bar/three]
inherit = bar/one
monitor = ${xrdb:bar2}

