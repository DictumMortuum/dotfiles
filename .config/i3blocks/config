align=center
separator_block_width=15
markup=none
command=~/.dotfiles/blocks/$BLOCK_NAME

[progress]
command=tail -n 1 /tmp/bar$(date +%F)
interval=once
signal=11

[notes]
command=head -n 1 /tmp/$(date +%F)
interval=once
signal=10

[keyboard]
interval=persist

[battery]
interval=30

[interface]
label=C:
interval=once

[wireless]
label=W:
command=~/.dotfiles/blocks/interface wlp
interval=once

[external]
label=E:
command=dig +short myip.opendns.com @resolver1.opendns.com
interval=once

[time]
command=date "+%Y-%m-%d %H:%M:%S"
interval=1

[host]
interval=once
