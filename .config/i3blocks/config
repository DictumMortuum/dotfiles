align=center
separator_block_width=15
markup=none
command=~/.dotfiles/blocks/$BLOCK_NAME

[keyboard]
interval=persist

[battery]
interval=30

[interface]
label=C:
interval=once

[wireless]
label=W:
command=~/.dotfiles/blocks/interface wlp
interval=once

[external]
label=E:
command=dig +short myip.opendns.com @resolver1.opendns.com
interval=once

[temperature]
interval=30

[time]
command=date "+%Y-%m-%d %H:%M:%S"
interval=1

[host]
interval=once
