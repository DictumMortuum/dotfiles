[colors]
background = ${xrdb:background:#ff0000}
background2 = ${xrdb:lighterbg:#ff0000}
selection = ${xrdb:selection:#ff0000}
foreground = ${xrdb:foreground:#ff0000}
separator = ${xrdb:separator:#ff0000}
lightfg = ${xrdb:color7:#ff0000}
wallpaper = ${xrdb:wallpaper:#ff0000}

[settings]
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/wired]
type = internal/network
label-connected = %local_ip%
interface = ${xrdb:wired}

[module/wlan]
type = internal/network
label-connected = %local_ip%
interface = ${xrdb:wireless}
interval = 3.0

[module/datetime]
type = internal/date
interval = 1.0
date = "%Y-%m-%d%"
time = "%H:%M:%S"
label = "%date% %time%"

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused = %index%
label-focused-padding = 1
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.selection}
label-unfocused = %index%
label-unfocused-background = ${colors.background2}
label-unfocused-padding = 1
label-visible = %index%
label-visible-padding = 1
label-visible-background = ${colors.background2}
label-urgent = %index%
label-urgent-padding = 1
index-sort = true

[module/keyboard]
type = internal/xkeyboard
format = <label-layout>
blacklist-0 = num lock
blacklist-1 = scroll lock
label-layout = %layout%
padding = 1

[module/battery]
type = internal/battery

[bar/bar]
monitor-strict = true
modules-left = i3
modules-center = keyboard
modules-right = battery wired wlan datetime
module-margin-right = 2
monitor = ${env:MONITOR}
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Hack:size=10;2
wm-restack = i3
padding-right = 1
tray-detached = false
tray-position = right

